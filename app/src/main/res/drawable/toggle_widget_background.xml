<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:angle="45" android:centerColor="@color/white" android:centerX="35%" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:angle="45" android:centerColor="@color/white" android:centerX="35%" android:endColor="@color/white" android:startColor="@color/white" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <gradient android:angle="45" android:centerColor="@color/black" android:centerX="35%" android:endColor="@color/black" android:startColor="@color/black" android:type="linear" />
        </shape>
    </item>
</selector>